rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public write access for inquiries.
    match /generalInquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    match /dealerInquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Product categories should be publicly readable, but only writable by authenticated users.
    match /productCategories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
